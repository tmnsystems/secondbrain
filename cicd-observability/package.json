{
  "name": "cicd-observability",
  "version": "1.0.0",
  "description": "CI/CD & Observability component for the SecondBrain architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "test:unit": "jest --testMatch='**/*.test.ts'",
    "test:integration": "jest --testMatch='**/integration/**/*.test.ts'",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:report": "eslint . --ext .ts -f html -o reports/lint-report.html",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage reports",
    "docker:build": "docker build -t secondbrain/cicd-observability:latest .",
    "docker:run": "docker run -p 3000:3000 secondbrain/cicd-observability:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "ci:pipeline": "ts-node src/ci/tools/run-pipeline.ts",
    "ci:test": "ts-node src/ci/tools/run-tests.ts",
    "ci:lint": "ts-node src/ci/tools/run-lint.ts",
    "ci:security": "ts-node src/ci/tools/run-security.ts",
    "ci:report": "ts-node src/ci/tools/generate-reports.ts"
  },
  "keywords": [
    "cicd",
    "observability",
    "monitoring",
    "logging",
    "metrics",
    "tracing",
    "secondbrain"
  ],
  "author": "SecondBrain Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "prometheus-client": "^0.5.0",
    "opentelemetry-js": "^1.18.1",
    "opentelemetry-exporter-jaeger": "^1.18.1",
    "opentelemetry-sdk-node": "^0.41.0",
    "node-fetch": "^3.3.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.18.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "snyk": "^1.1249.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  }
}